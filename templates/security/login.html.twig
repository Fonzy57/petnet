{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <h1>Connectez vous</h1>

    {% for message in app.flashes('compte') %}
        <div class="alert alert-info">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            {{ message }}
        </div>
    {% endfor %}

        <form action="{{ path('security_login') }}" method="post">
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Votre adresse email" required name="_username">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Votre mot de passe" required name="_password">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Se connecter</button>
            </div>
        </form>

{% endblock %}