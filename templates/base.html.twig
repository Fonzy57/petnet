<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="{{ path('home') }}">Petnet</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

        <div class="collapse navbar-collapse" id="navbarColor03">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('informations') }}">Informations</a>
                </li>
                {% if app.user %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('profil') }}">Votre Profil</a>
                </li>
                {% endif %}
            </ul>
                {% if not app.user %}
                    <a class="btn btn-success my-2 my-sm-0 mr-sm-2" href="{{ path('security_login') }}">Se connecter</a>
                    <a class="btn btn-outline-info my-2 my-sm-0" href="{{ path('security_registration') }}">Créer un compte</a>
                {% else %}
                    <a class="btn btn-danger my-2 my-sm-0 mr-sm-2" href="{{ path('security_logout') }}">Se déconnecter</a>
                {% endif %}

        </div>
    </nav>

    <div class="container">
        {% block body %}{% endblock %}
    </div>

        {% block javascripts %}{% endblock %}
    </body>
</html>
